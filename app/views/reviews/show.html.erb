<% provide :title, @review.title %>
<div class="jumbotron">
  <div class="review"><h1><%= @review.title %></h1></div>
    <div class="row">
      <div class="col-md-8">
        <li>
          <%= t :posted %><%= @review.created_at.strftime t "review.time" %>
            <%= t :by %><%= @review.user.name %>
        </li>
      </div>
      <% if policy(@review).update? %>
        <div class="col-md-4">
          <%= link_to t(:edit), edit_review_path(@review),
            class: "btn btn-default btn-xs glyphicon glyphicon-edit" %>
          <%= link_to t(:delete), review_path(@review),
            method: :delete, data: {confirm: t(:delete_confirm)},
            class: "btn btn-default btn-xs glyphicon glyphicon-trash" %>
        </div>
      <% end %>
    </div><br>
  <%= @review.content.html_safe %>
</div>

<div style = "margin-left: 20%">
  <h3><%= t "comment.title" %></h3>
  <div class="row">
    <div class="col-md-10">
      <% if policy(@comment).create? %>
        <%= simple_form_for [@review, @comment] do |f| %>
          <%= f.text_area :body, placeholder: t("comment.add_a_comment") %><br>
          <%= f.submit t ("comment.add_comment") %>
        <% end %>
      <% end %>
    </div>
  </div><br>

  <div id="comments">
    <%= render partial: "comments/comment",
      collection: @review.comments.order(created_at: :desc) %>
  </div>
</div>

