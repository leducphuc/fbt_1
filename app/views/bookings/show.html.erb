<div class="container">
<div class="row">
  <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6">
        <address>
          <strong><%= @booking.user.name %></strong><br>
          <%= @booking.user.email %><br>
        </address>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 text-right">
          <p><em><%= @booking.created_at %></em></p>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <h1><%= t "booking.payment" %></h1>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t "booking.tour" %></th>
            <th class="text-center">
              <%= t "booking.price" %></th>
            <th class="text-center">
              <%= t "booking.start" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-md-7"><em><%= @booking.tour.name %></em></td>
            <td class="col-md-2" style="text-align: center"><%= @tour.price %>
              <%= t :money %></td>
            <td class="col-md-3 text-center"><%= @booking.start_date %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to tour_booking_path(@tour, @booking,
        user_payment: "user_payment"), method: :patch do %>
        <button type="button"
          class="btn btn-success btn-lg btn-block">
          <%= t("booking.transaction") %>
        </button>
      <% end %>
    </div>
  </div>
</div>
</div>
